<%- include('../templates/head');-%>

<body>
    <%-  include('../templates/header');-%>
    <div class="container-fluid m-0 bg-dark text-light">
        <div class="row justify-content-center">
            <div class="col-12 justify-content-center d-flex">
                <h1 class="jumbotron bg-dark align-center">Envia tu correo</h1>
            </div>
            <form class="col-md-6 col-sm-12 p-3">
                <div class="form-group">
                    <label for="email">Para</label>
                    <input type="email" class="form-control" aria-describedby="emailHelp" placeholder="A quien le enviara el email?">
                    <small id="emailHelp" class="form-text text-muted">El email sera privado.</small>
                </div>
                <div class="form-group pt-2">
                    <label for="mensaje">Mensaje</label>
                    <textarea name="mensaje" id="msg" cols="5" rows="5" class="form-control"></textarea>
                </div>
                <div class="row p-3">
                    <button class="col-md-4 col-sm-12 btn btn-primary text-light">Enviar Correo</button>
                </div>
            </form>
        </div>
    </div>

    <%-  include('../templates/footer');-%>
</body>

</html>